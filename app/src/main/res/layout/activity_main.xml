<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F5F5">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="67dp"
       android:src="@drawable/upper"
       android:scaleType="fitXY"
       />
   <ImageView
       android:layout_width="30dp"
       android:layout_height="20dp"
      android:src="@drawable/next"
       android:id="@+id/prev"
      android:scaleType="fitXY"
       android:layout_marginTop="14dp"
       android:layout_marginLeft="12dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="70dp"
       android:text="Choose the Soil Type"
       android:textSize="20sp"
       android:paddingLeft="10dp"
       android:textColor="#000000"/>
   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Alkaline"
       android:id="@+id/alkaline"
       android:onClick="checked_array"
       android:textColor="#301EC1"
       android:theme="@style/coloured_checkbox"
       android:layout_marginLeft="20dp"
       android:textSize="25sp"
       android:paddingLeft="0dp"
       android:layout_marginTop="128dp"/>
   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="None"
       android:onClick="checked_array"
       android:textColor="#301EC1"
       android:id="@+id/none"
       android:layout_marginLeft="240dp"
       android:textSize="25sp"
       android:theme="@style/coloured_checkbox"
       android:paddingLeft="0dp"
       android:layout_marginTop="168dp"/>
   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Clay"
       android:id="@+id/clay"
       android:theme="@style/coloured_checkbox"
       android:textColor="#301EC1"
       android:onClick="checked_array"
       android:layout_marginLeft="240dp"
       android:textSize="25sp"
       android:paddingLeft="0dp"
       android:layout_marginTop="128dp"/>
   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Chalky"
       android:id="@+id/chalky"
       android:onClick="checked_array"
       android:theme="@style/coloured_checkbox"
       android:textColor="#301EC1"
       android:layout_marginLeft="20dp"
       android:textSize="25sp"
       android:paddingLeft="0dp"
       android:layout_marginTop="168dp"/>


   <Button
       android:id="@+id/predict"
       android:layout_width="220dp"
       android:layout_height="72dp"
       android:layout_marginLeft="90dp"
       android:layout_marginTop="262dp"
       android:background="@drawable/buttonback"
       android:text="Prediction"
       android:textSize="20dp"
       android:textStyle="bold"
       />
   <Button
       android:id="@+id/weather"
       android:layout_width="220dp"
       android:layout_height="72dp"
       android:layout_marginLeft="90dp"
       android:layout_marginTop="352dp"
       android:background="@drawable/buttonback"
       android:text="Weather"
       android:textSize="20dp"
       android:textStyle="bold"
       />
   <Button
       android:id="@+id/soil"
       android:layout_width="220dp"
       android:layout_height="72dp"
       android:layout_marginLeft="90dp"
       android:layout_marginTop="442dp"
       android:background="@drawable/buttonback"
       android:text="Soil Information"
       android:textSize="20dp"
       android:textStyle="bold"
       />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="161dp"
       android:src="@drawable/back"
       android:scaleType="fitXY"
       android:layout_alignParentBottom="true"/>
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       android:src="@drawable/trans"
       android:scaleType="fitXY"
       android:layout_alignParentBottom="true"/>

</RelativeLayout>